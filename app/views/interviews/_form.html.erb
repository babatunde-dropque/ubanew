
<div class="content">
     <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :title %>
          <%= f.text_field :title,:id => 'title-interview', :placeholder => 'Role Title', class: "form-control border-input", html: {spellcheck: "false"} %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :description %>
          <%= f.text_area :description,:id => 'title-description', :placeholder => 'Role Description', class: "form-control border-input", rows:"4", html: {spellcheck: "false"} %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label :instruction %>
          <%= f.text_area :instruction, :id => 'title-instruction', :placeholder => 'Instructions for the Candidates', class: "form-control border-input", rows:"4", html: {spellcheck: "true"} %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :completed_message %>
          <%= f.text_area :completed_message, :placeholder => 'Completed Message after', class: "form-control border-input", rows:"4", html: {spellcheck: "true"} %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :deadline %>
        <%= f.date_field :deadline, class: "form-control border-input" %>
      </div>
    </div>


    <div class="row">
      <div class="form-group col-md-12">
          <%= f.label :tags %>
            <%= f.text_field :tags,:id => 'tags', class: "form-control border-input", html: {spellcheck: "false"} %>
             <label id ="indicator-tags"> </label>
        </div> 
    </div>





    <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :candidate_emails %>
          <%= f.text_field :mail_list, :id => 'emails', class: "form-control border-input", html: {spellcheck: "false"} %>
        <label id ="indicator"> </label>
      </div>
    </div>


      <input type="hidden" value="<%= @interview.questions.to_json %>" name="interview[questions]" id="questions-json" />


      <div class="row" > 
          <div class='col-md-6'>
            <h5 class ="left-edge col-md-11 "> Questions </h5> 
          </div>
          <div class='col-md-4'>
             <select id="question-type" class='btn box-shape float-left margin-top-form' > 
                <option value='1'> Video Question </option>
                <option value='2'> Text Question </option>
                <option value='3'> File/Image Upload </option>
             </select>
          </div>
          <div class='col-md-2 '>
              <btn class="btn box-shape width-100 margin-top-form"  id="add-new"> Add new </btn>
          </div>
        </div>
         
      <hr>
     
     <div id ="question-tag">
        <!-- this is where all the question will be added -->

        

        
      
          
     </div>
     <hr>

     <div class="row">
        <div class=" form-group col-md-10" >
          <label>Private interviews are only accessible by invited candidate</label><br>
        </div>
        <div class="col-md-2 ">
          <div class="float-right">
            <div class="onoffswitch file">
              <%= f.check_box :status, :id => 'myonoffswitch', class: "onoffswitch-checkbox"  %>
    
               <!--  <input type="checkbox" name="interview[status]" class="onoffswitch-checkbox" id="myonoffswitch" checked=""> -->

                <label class="onoffswitch-label" for="myonoffswitch">
                    <span class="onoffswitch-inner"></span>
                    <span class="onoffswitch-switch"></span>
                </label>
            </div>
          </div>
            
        </div>
     </div>
    
     <hr>
      <div class="text-center">
        <%= f.submit :id => 'interview-submit', :value => d, class: "btn btn-info btn-fill btn-wd" %>
      </div>
</div>