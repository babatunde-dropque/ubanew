
<div class="content">
  <div id="part1">
     <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :title %>
          <%= f.text_field :title,:id => 'title-interview', :placeholder => 'Role Title', class: "form-control border-input", html: {spellcheck: "false"} %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :description %>
          <%= f.text_area :description,:id => 'title-description', :placeholder => 'Role Description', class: "form-control border-input", rows:"4", html: {spellcheck: "false"} %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :instruction %>
          <%= f.text_area :instruction, :id => 'title-instruction', :placeholder => 'Instructions for the Candidates', class: "form-control border-input", rows:"4", html: {spellcheck: "true"} %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :completed_message %>
          <%= f.text_area :completed_message, :id => 'title-completed-message', :placeholder => 'Completed Message after', class: "form-control border-input", rows:"4", html: {spellcheck: "true"} %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :deadline %>
        <%= f.text_field :deadline, class: "form-control border-input" , id: "date" , placeholder:"yyyy-mm-dd" %>
      </div>
    </div>

    <div class="row">
        <div class=" form-group col-md-10" >
          <label>Interviews Access </label><br>
        </div>
        <div class="col-md-2 ">
          <div class="float-right">
            <div class="onoffswitch file">
              <%= f.check_box :status, :id => 'myonoffswitch', class: "onoffswitch-checkbox"  %>

                <label class="onoffswitch-label" for="myonoffswitch">
                    <span class="onoffswitch-inner"></span>
                    <span class="onoffswitch-switch"></span>
                </label>
            </div>
          </div>

        </div>
     </div>
     <br><br>

    <div class="text-center">
      <button class="btn btn-info btn-fill btn-wd" id="continue"> Continue </button>
    </div>
  </div>
  <div id="part2">
      <input type="hidden" value="<%= @interview.questions.to_json %>" name="interview[questions]" id="questions-json" />


      <div class="row" >
          <div class='col-md-6'>
            <h5 class ="left-edge col-md-11 ">Add Questions </h5>
          </div>
          <div class='col-md-4'>

             <select id="question-type" class='btn box-shape float-left margin-top-form' >
                <option value='1'> Video Question </option>
                <option value='2'> Text Question </option>
                <option value='3'> File/Image Upload </option>
             </select>
          </div>
          <div class='col-md-2 '>
              <btn class="btn box-shape width-100 margin-top-form"  id="add-new"> Add new </btn>
          </div>
        </div>

      <hr>

     <div id ="question-tag">
        <!-- this is where all the question will be added -->
        <% if d == "Create Interview" %>
        <div class='row' type ='1'>
          <div class='col-md-8'>
             <div class='form-group'>
                  <input type='text' class='form-control border-input' placeholder='Video Question' >
              </div>
          </div>
          <div class='col-md-3'>
              <div class='form-group'>
                  <input type='text' class='form-control border-input' placeholder='mm:ss Time allow' >
              </div>
          </div>
          <div class='col-md-1 close'>
            <btn class='btn remove'><i class='ti-close'></i></btn>
          </div>
      </div>

        <div class='row'  type ='2'>
          <div class='col-md-8'>
             <div class='form-group'>
                  <input type='text' class='form-control border-input' placeholder='Text Question'  >
             </div>
          </div>
          <div class='col-md-3'>
              <div class='form-group'>
                  <input type='text' class='form-control border-input' placeholder='Max words allowed' >
              </div>
          </div>
          <div class='col-md-1 close'>
            <btn class='btn remove'><i class='ti-close'></i></btn>
          </div>
      </div>
      <% end %>

     </div>
     
   
     
     <br>
      <div class="text-center">
        <%= f.submit :id => 'interview-submit', :value => d, class: "btn btn-info btn-fill btn-wd" %>
      </div>
    </div>
</div>




<script>
  
  $('#part2').hide();
  $('#continue').click(function(event){
    var validation = true;
    var titleInterview = $("#title-interview").val()
      if (!titleInterview) {
        showMessage('top','center', "Interview title cannot be empty", 4);
        validation = false;
        event.preventDefault();
      }
      var descriptionInterview = $("#title-description").val()
      if(!descriptionInterview) {
        showMessage('top','center', "Interview description cannot be empty", 4);
        validation = false;
        event.preventDefault();
      } 
      var instructionInterview = $("#title-instruction").val()
      if(!instructionInterview) {
        showMessage('top','center', "Interview instruction cannot be empty", 4);
        validation = false;
        event.preventDefault();
      } 
      var completedMessage = $("#title-completed-message").val();
      if(!completedMessage) {
        showMessage('top','center', "Interview completed message cannot be empty", 4);
        validation = false;
        event.preventDefault();
      } 
    if (validation){
       $('#part1').hide();
       $('#part2').show();
    }
    return false;
  });

  $('#date').datepicker({
    dateFormat:"yy-mm-dd",
    minDate: 0 
  });

</script>
