
<div class="content">
     <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :title %>
          <%= f.text_field :title,:id => 'title-interview', :placeholder => 'Role Title', class: "form-control border-input", html: {spellcheck: "false"} %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :description %>
          <%= f.text_area :description,:id => 'title-description', :placeholder => 'Role Description', class: "form-control border-input", rows:"4", html: {spellcheck: "false"} %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :instruction %>
          <%= f.text_area :instruction, :id => 'title-instruction', :placeholder => 'Instructions for the Candidates', class: "form-control border-input", rows:"4", html: {spellcheck: "true"} %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label :salary_range %>
          <%= f.text_field :salary_range, :placeholder => 'Salary Range', class: "form-control border-input", html: {spellcheck: "false"} %>
      </div>
   
      <div class="col-md-6">
        <%= f.label :deadline %>
        <%= f.date_field :deadline, class: "form-control border-input"%>
      </div>


    </div>

    <div class="row">
       <div class="form-group col-md-12">
        <input type="checkbox"  value="second_checkbox"> 
        <label for="cbox2">This is the second checkbox</label>
       </div> 
    </div>

    <div class="row">
      <div class="form-group col-md-12">
          <%= f.label :tags %>
            <%= f.text_field :tags,:id => 'tags', class: "form-control border-input", html: {spellcheck: "false"} %>
             <label id ="indicator-tags"> </label>
        </div> 
    </div>

    <%= label_tag 'expertise_maths', 'Maths' %>
    <br><%= check_box_tag 'features[]', 'scenarios' %> Scenarios
    <br><%= check_box_tag 'features[]', 'role_profiles' %> Role profiles
    <br><%= check_box_tag 'features[]', 'private_messages' %> Private messages
    <br><%= check_box_tag 'features[]', 'chatrooms' %> Chatrooms
    <br><%= check_box_tag 'features[]', 'forums' %> Forums
    <br><%= check_box_tag 'features[]', 'news' %> News
    <br><%= check_box_tag 'features[]', 'polls' %> Polls
    <%= f.check_box :tags, {}, true, false %> <br />


    <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :candidate_emails %>
          <%= f.text_field :mail_list, :id => 'emails', class: "form-control border-input", html: {spellcheck: "false"} %>
        <label id ="indicator"> </label>
      </div>
    </div>




   

