
<div class="content">
     <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :title %>
          <%= f.text_field :title,:id => 'title-interview', :placeholder => 'Role Title', class: "form-control border-input", html: {spellcheck: "false"} %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :description %>
          <%= f.text_area :description,:id => 'title-description', :placeholder => 'Role Description', class: "form-control border-input", rows:"4", html: {spellcheck: "false"} %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label :instruction %>
          <%= f.text_area :instruction, :id => 'title-instruction', :placeholder => 'Instructions for the Candidates', class: "form-control border-input", rows:"4", html: {spellcheck: "true"} %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :completed_message %>
          <%= f.text_area :completed_message, :placeholder => 'Completed Message after', class: "form-control border-input", rows:"4", html: {spellcheck: "true"} %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :deadline %>
        <%= f.text_field :deadline, class: "form-control border-input" , id: "date" ,placeholder:"deadline dd/mm/yyy" %>
      </div>

      
    </div>



