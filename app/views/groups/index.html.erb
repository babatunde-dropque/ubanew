        	<div class="content">
			    <div class="content table-responsive table-full-width">
			      <table  class="table table-striped">
					<thead>
					 <tr>
					 	<th>Name</th><th>Size</th><th>Modify</th><th></th>
					</tr>
					</thead>
					<tbody>
						<% @groups.each do |group|%>
					<tr>
						<td> <%=group.name%></td>
