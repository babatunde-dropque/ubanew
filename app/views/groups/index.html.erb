<div class="wrapper">
    <div class="sidebar" data-background-color="white" data-active-color="success">

<!-- TODO Add Sidebar Panel -->
 <%= render partial: "companies/sidebar" %>
<div class="main-panel">
<!-- TODO Add Navbar Panel -->
    <%= render partial: "users/navbar" %>
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="card">
					<% if !flash[:notice].blank? %>
						<div class="alert alert-info">
						<%= flash[:notice] %>
						</div>
					<% end %>
					<br/>

					<%= link_to "New group", new_company_group_path, class: "btn btn-primary" %>
					<table  class="table table-bordered table-striped">
						<thead>
						 <tr>
						 	<th>Name</th><th>View</th><th>Modify</th><th></th>
						</tr>
						</thead>
						<tbody>
							<% @groups.each do |group|%>
						<tr>
						<td> <%=group.name%></td>
						<td> <%= link_to "View group", company_group_bulks_path(company_id:@company.slug, group_id:group.slug) %>  </td>
						<td> <%= link_to "Update", company_group_bulks_path(company_id:@company.slug, group_id:group.slug) %> </td>
						<td> <%= button_to  "Delete", company_group_path(id: group.id), method: :delete, class:"btn btn-danger", data: { confirm: "Are you sure you want to delete  #{group.name}?" } %>    </td>
						</tr>
						<% end %>
						</tbody>
					</table>
					                                

                              
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




















