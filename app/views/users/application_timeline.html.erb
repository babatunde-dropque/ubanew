
<div class="wrapper">
     
    <div class="main-panel expand">
        
        <!-- TODO Add Footer Partial -->
        <%= render partial: "navbar" %>


        <div class="content">
            <div class="container-fluid">

            	<div class="row">
                        <div class="header col-md-4 col-md-offset-2">
                                <h4 class="title">Applications (<%= @user.submissions.length %>)</h4>
                        </div>
                        <% if @user.submissions.length > 0 %>
                          <div class="col-md-4 col-md-offset-2">
                              <%= link_to new_company_path do %>
                                  <button  type="button" class="btn btn-raised btn-twitter">Apply for new</button>
                              <% end %>
                          </div>

                         
                        <% end %>
                        <!-- test for zero state -->
                        <% if @user.submissions.length > 0 %>
                       

                          <div class="card col-md-8 col-md-offset-2 box-shape">
                            <div class="content">
                                <ul class="list-unstyled team-members">
                                   <% @user.submissions.each do | submission | %>
                                      <li>
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <div class="">
                                                    <img src=" " height="55"  />
                                                       
                                                </div>
                                            </div>
                                            <div class="col-xs-6">
                                              
                                              <br>
                                              
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                             <span class="text-muted">
                                                               Status: Owner  
                                                             </span> 
                                                        </div>
                                                        <div class="col-md-6">
                                                          <span class="text-muted">
                                                            No of collaborator(s): test %>
                                                          </span> 
                                                        </div>
                                                    </div>                                           
                                            </div>

                                            <div class="col-xs-3 text-right">
                                               <!--  <btn class="btn btn-sm btn-success btn-icon"><i class="fa fa-envelope"></i></btn> -->
                                            </div>
                                        </div>


                                    </li>
                                    <% end %>
                                </ul>
                            </div>
                        </div>


                        <% @user.submissions.each do | submission | %>
                        <% if !submission.interview.nil? %>
                         <div class="col-md-8 col-md-offset-2">
                        <div class="card box-shape">
                            <!-- <div class="header">
                                <h4 class="title"><%= submission.interview.title %> </h4>
                                <p class="category"><%= truncate(submission.interview.description , :length => 150) %></p>
                            </div> -->
                            <div class="content">
                              <div class="row">
                                <div class="col-md-7 col-sm-7">

                                   <h4 class="title"><%= submission.interview.title %> </h4>
                                <p class="category"><%= truncate(submission.interview.description , :length => 150) %></p>

                                <!--   <div class="icon-big icon-warning text-center">
                                           
                                  </div> -->
                                  <!-- <div class="numbers">
                                      <p>Capacity</p>
                                      105GB
                                  </div> -->

                                 <%= submission.current_no %> / <%= submission.interview.questions.length %>
                             
                             
                              <div class="chart-legend">
                                        <i class="fa fa-circle text-info"></i> Open
                                        <i class="fa fa-circle text-danger"></i> Bounce
                                        <i class="fa fa-circle text-warning"></i> Unsubscribe
                                </div>


                                </div>
                                <div class="col-md-5 col-sm-5">
                                   <h4 class="title"><%= submission.interview.company.name %> </h4>
                                   <a href="https://<%= submission.interview.company.subdomain %>.dropque.com"> <%= submission.interview.company.subdomain %>.dropque.com </a> <br>

                                    <% if submission.interview.company.logo.file.nil? %>
                                 <%= image_tag('placeholder-company.png', style:"height: 40px; width: 60px;") %>
                                <% else %>
                                  <img src="<%= submission.interview.company.logo.url %>" style="height: 40px; width: 60px;"  />
                                <% end %>
                                <br>

                                  <input type='button' class='btn btn-finish btn-fill btn-info btn-wd box-shape' name='finish' id="finish" value='Resume' />

                                </div>
                              
                                    
                                        
                                
                              </div>
                                <div class="footer">
                                   
                                    <hr>

                  <div class="row block-display">
                        <div class="col-lg-4 col-md-4 col-sm-4">
                            <div class="stats">
                              <i class="ti-timer"></i> Created at <%=  submission.interview.created_at.strftime("%d-%m-%Y") %>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4 col-sm-4">
                          <div class="stats">
                            <i class="ti-timer"></i> Updated at <%=  submission.interview.updated_at.strftime("%d-%m-%Y") %>
                          </div>

                        </div class="col-lg-4 col-md-4 col-sm-4">
                          <% if !submission.interview.deadline.nil? %>
                            <div class="stats">
                              <i class="ti-timer"></i> Deadline: <%=  submission.interview.deadline.strftime("%d-%m-%Y") %>
                            </div>
                          <% end %>
                        <div>
                        </div>
                    </div>


                                </div>
                            </div>

                        </div>
                    </div>
                    <% end %>
                    <% end %>















                   



















                        <% else %>
                          <div class="col-md-8 col-md-offset-2">
                            <div class="content">
                              <%= render partial: "when_empty" %>
                            </div>
                          </div>
                        <% end %>
            	
                    </div>
    </div>
</div>

    </div>
</div>

<script >

<% flash.each do |key, value| %>
    showMessage('top','center', "<%= value %>", 2);                   
<% end %>

</script>


