<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
<!--  <link rel="apple-touch-icon" sizes="76x76" href="assets/img/apple-icon.png">
  <link rel="icon" type="image/png" href="assets/img/favicon.png"> -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

  <title>Dropque</title>

  <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />

  <!--     Fonts and icons     -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css" />

</head>
<body>
    <div class="container">
        <div class="logo-container">
          <div class="text-center">
            <%= image_tag('dqlg.png')%>
          </div>                    
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">         
                    <div class="card card-signup">
                        <div class="form">
                            <div class="header header-primary text-center">
                              <h2>Change your password</h2>
                            </div>
                            <div class="content">
                                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                                  <%= devise_error_messages! %>
                                  <%= f.hidden_field :reset_password_token %>


<%= render "users/shared/links" %>




<div class="wrapper">
     
    <div class="main-panel expand">
        
        <!-- TODO Add Footer Partial -->
        <%= render partial: "navbar" %>


        <div class="content">
            <div class="container-fluid">

              <div class="row">
                        <div class="header col-md-4 col-md-offset-2">
                                <h4 class="title">Organizations (<%= @user.companies.length %>)</h4>
                        </div>
                        <% if @user.companies.length > 0 %>
                          <div class="col-md-4 col-md-offset-2">
                              <%= link_to new_company_path do %>
                                  <button  type="button" class="btn btn-raised btn-twitter">New Organization</button>
                              <% end %>
                          </div>
                        <% end %>
                        <!-- test for zero state -->
                        <% if @user.companies.length > 0 %>

                          <div class="card col-md-8 col-md-offset-2">
                            <div class="content">
                                <ul class="list-unstyled team-members">
                                    
                                    <% @user.joint_user_companies.each do | user_company| %>
                                      <li>

                                        
                                        <%= link_to company_path(user_company.company) do%>  
                                        <div class="row">
                                            <div class="col-xs-3">
                                                <div class="avatar">
                                                    <% if user_company.company.logo.file.nil? %>  
                                                           <%= image_tag('logo1.png', class:" img-responsive", alt:"Thumb") %>
                                                       <% else %>
                                                          
                                                            <img src="<%= user_company.company.logo.url %>" class="img-responsive" alt="Thumb" />
                                                       <% end %>
                                                </div>
                                            </div>
                                            <div class="col-xs-6">
                                                <%= user_company.company.name %>
                                                <!-- get number of collaborators -->
                                                <% num_collabs = user_company.company.users.length  %>

                                                <br>
                                                <% if user_company.status == 0 %>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                             <span class="text-muted">
                                                               Status: Owner  
                                                             </span> 
                                                        </div>
                                                        <div class="col-md-6">
                                                          <span class="text-muted">
                                                            No of collaborator: <%= num_collabs %>
                                                          </span> 
                                                        </div>
                                                    </div>
                                                <% elsif user_company.status == 1 %>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                             <span class="text-muted">
                                                               Status:  Admin  
                                                             </span> 
                                                        </div>
                                                        <div class="col-md-6">
                                                          <span class="text-muted">
                                                            No of collaborator: <%= num_collabs %>
                                                          </span> 
                                                        </div>
                                                    </div>
                                                <% elsif user_company.status == 2 %>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                             <span class="text-muted">
                                                               Status: User 
                                                             </span> 
                                                        </div>
                                                        <div class="col-md-6">
                                                          <span class="text-muted">
                                                            No of collaborator: <%= num_collabs %>
                                                          </span> 
                                                        </div>
                                                    </div>
                                                <% elsif %>
                                                    
                                                <% end %>

                                            </div>

                                            <div class="col-xs-3 text-right">
                                               <!--  <btn class="btn btn-sm btn-success btn-icon"><i class="fa fa-envelope"></i></btn> -->
                                            </div>
                                        </div>

                                        <% end %>
                                    </li>
                                  <% end %>
                                </ul>
                            </div>
                        </div>


                        <% else %>
                          <div class="card col-md-8 col-md-offset-2">
                            <div class="content">
                              <%= render partial: "when_empty" %>
                            </div>
                          </div>
                        <% end %>
              
                    </div>
    </div>
</div>

    </div>
</div>


                                  <div class="field">
                                    <%= f.label :password, "New password" %><br />
                                    <% if @minimum_password_length %>
                                      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                                    <% end %>
                                    <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
                                  </div>

                                  <div class="field">
                                    <%= f.label :password_confirmation, "Confirm new password" %><br />
                                    <%= f.password_field :password_confirmation, autocomplete: "off" %>
                                  </div>

                                  <div class="text-center">
                                      <%= f.submit "Change my password", class: "btn btn-primary btn-raised"%>
                                  </div>
                                <% end %>
                            
                                <div class="text-center">
                                  <%= render "users/shared/links" %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<body>
</html>

