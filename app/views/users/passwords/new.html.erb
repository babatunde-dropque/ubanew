		
		<div class="container">
			<div class="logo-container">
				<div class="text-center">
				  <a href="/"><%= image_tag('dqlg.png')%></a>
				</div>                    
			</div>
			<div class="container">
			    <div class="row">
			        <div class="col-md-4 col-md-offset-4">         
			            <div class="card card-signup">
							<div class="form">
								<div class="text-center" style="color:#da2417">
								   <h3>Forgot password?</h3>
								</div>
								<div class="content">
									<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
									  <%= devise_error_messages! %>


									
									    <div class="input-group">
									        <span class="input-group-addon">
									           <i class="material-icons">email</i>
									        </span>                     
									        <%= f.email_field :email, :placeholder => 'E-mail', class: "form-control", html: {spellcheck: "false"} %>                     
									    </div>

									    <div class="text-center">
									        <%= f.submit "Send me reset instructions", class: "btn btn-primary btn-raised"%>
									    </div>
									<% end %>
									<div class="text-center">
									   <%= render "users/shared/links" %>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
    
