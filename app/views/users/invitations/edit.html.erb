
  <div class="container">
      <div class="logo-container">
        <div class="text-center">
          <%= image_tag('dqlg.png')%>
        </div>                    
      </div>
      <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">         
                <div class="card card-signup">
                    <div class="form">
                      <div class="header header-primary text-center">
                         <h2><%= t 'devise.invitations.edit.header' %></h2>
                      </div>
                      <div class="content">
                      <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
                        <%= devise_error_messages! %>
                        <%= f.hidden_field :invitation_token %>

                        <% if f.object.class.require_password_on_accepting %>

                        <div class="input-group">
                            <span class="input-group-addon">
                               <i class="material-icons">face</i>
                            </span>                     
                            <%= f.text_field :name, :placeholder => 'FirstName LastName', class: "form-control", html: {spellcheck: "false"} %>                     
                        </div>

                        
                        <div class="input-group">
                         <span class="input-group-addon">
                             <i class="material-icons">lock_outline</i>
                         </span>
               
                         <%= f.password_field :password, autocomplete: "off", :placeholder => 'password', class: "form-control", html: {spellcheck: "false"} %>
                        </div>

                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="material-icons">lock_outline</i>
                          </span> 
                            <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Password confirmation', class: "form-control", html: {spellcheck: "false"}%>
                        </div>

                        <% end %>
                        <div class="text-center">
                          <%= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-primary btn-raised"%>
                        </div>
                      <% end %>
                      </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
  </div>
