

<div class="wrapper">

    <div class="main-panel expand">

        <!-- TODO Add Footer Partial -->
        <%= render partial: "navbar" %>


        <div class="content">
            <div class="container-fluid">
                <div class="col-md-8 col-md-offset-2">


                  <div class="card card-user">
                        <div class="image">
                            
                            <%= image_tag('background.jpg')%> 


                        </div>
                        <div class="content">
                            <div class="author">
                              
                               <%= image_tag('default-avatar.png', class:"avatar border-white", alt:"...") %>
                              
                              <h4 class="title"><%= @user.name %><br>
                                 <a href="#"><small><%= @user.email %></small></a>
                              </h4>
                            </div>
                            <p class="description text-center">
                                <% if @user.status  == 0 %>
                                  Status: Applicant
                                <% elsif @user.status  == 1 %>
                                  Status: Interviewer
                                <% else %>

                                <% end %>
                            </p>
                        </div>
                        <hr>
                        <div class="text-center">
                            <div class="row">
                                <div class="col-md-6">
                                   <%= link_to user_timeline_path(current_user) do %>
                                      <h5><%= @user.submissions.length %><br><small>Application(s)</small></h5>
                                   <% end %> 
                                </div>
                                <div class="col-md-6">
                                  <%= link_to user_dashboard_path(current_user) do %>
                                      <h5><%= @user.companies.length %><br><small> Organization(s)</small></h5>
                                   <% end %> 
                                </div>

                            </div>
                        </div>
                    </div>





         <div class="content">
            <div class="row">
              <div class="col-lg-6 col-md-6">
                      <div class="sharing-area text-center">
                          
                          <h5> Applicant ?</h5>

                           <%= link_to build_profile_path do %>
                              <button  type="button" class="btn btn-raised btn-twitter">Build Career Profile</button>
                          <% end %>
                      </div>
              </div>

               <div class="col-lg-6 col-md-6">
                  <div class="sharing-area text-center">
                   
                    <h5>Interviewer ?</h5>
                     <%= link_to new_company_path do %>
                        <button  type="button" class="btn btn-raised btn-twitter">Create Organization Profile</button>
                    <% end %>
                </div>
            </div>
          </div>
      </div>


                          </div>
</div>
</div>
</div>
</div>





 <script >
    <% flash.each do |key, value| %>
        showMessage('top','center', "<%= value %>", 2);
    <% end %>
</script>