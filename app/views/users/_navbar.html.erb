                       <%= image_tag('dqlg.png', style:"height: 65px;" )%>
                    <% end %>
                </div>
                <div class="collapse navbar-collapse">
                  <% if !@interview.nil? %>
                    <a class="navbar-brand" href="#"> <%= truncate( @interview.title, :length => 50) %> </a>
