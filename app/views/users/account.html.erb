
<div class="wrapper">
    <div class="main-panel expand">
       <!-- TODO Add Footer Partial -->
        <%= render partial: "navbar" %>
        <div class="content">
            <div class="container-fluid">

            <div class="col-lg-6 col-md-12">
                          <div class="card">
                              
                              <div class="card-content">
                                  <div class="nav-tabs-navigation">
                                <div class="nav-tabs-wrapper">
                                  <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
                                      <li class="active"><a href="#home" data-toggle="tab">Home</a></li>
                                      <li><a href="#profile" data-toggle="tab">Profile</a></li>
                                      <li><a href="#messages" data-toggle="tab">Messages</a></li>
                                  </ul>
                                </div>
                            </div>
                            <div id="my-tab-content" class="tab-content text-center">
                                <div class="tab-pane active" id="home">
                                   <div class="card card-user">

                         <div class="image">
                            <%= image_tag('background.jpg') %>
                        </div>
                        <div class="content">
                            <div class="author">
                              

                            <% if @user.a_dp.file.nil? %>
                                <%= image_tag('default-avatar.png', class:"avatar border-white", alt:"...") %>
                              
                            <% else %>
                                <img src="<%=@user.a_dp.url %>"  class="avatar border-white" alt="..." />
                                                              
                            <% end %>
                       
                               
                              <h4 class="title"><%= @user.name %><br>
                                 <a href="#"><small><%= @user.email %></small></a>
                              </h4>
                            </div>
                            <p class="description text-center">
                                <% if @user.status  == 0 %>
                                  Status: Applicant
                                <% elsif @user.status  == 1 %>
                                  Status: Interviewer
                                <% else %>

                                <% end %>
                            </p>
                        </div>
                        <hr>
                        
                    </div>
                                </div>
                                <div class="tab-pane" id="profile">
                                     <div class="text-center">
                <div class="row">
                    <div class="col-md-6">
                       <%= link_to user_timeline_path(current_user) do %>
                          <h5><%= @user.submissions.length %><br><small>Application(s)</small></h5>
                       <% end %> 
                    </div>
                    <div class="col-md-6">
                      <%= link_to user_dashboard_path(current_user) do %>
                          <h5><%= @user.companies.length %><br><small> Organization(s)</small></h5>
                       <% end %> 
                    </div>

                </div>
            </div>
                                </div>
                                <div class="tab-pane" id="messages">
                                    <p>Here are your messages.</p>
                                </div>
                            </div>
                              </div>
                          </div>
                      </div>


              <div class="row">


                <div class='col-md-8 col-md-offset-2'>
                    
                        <div class="card box-shape">
                            <div class="header">
                                <h4 class="title"> Account Details </h4>
                            </div>
                            <div class="content">
                             
                                <form id="form" method="post">
                                  <input type="hidden" name="update" value="update">
                                  <div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Name</label>
                                                <input type="text" class="form-control border-input"  placeholder="Firstname Lastname" name="name" value="<%= @user.name %>">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Email</label>
                                                <input type="email" class="form-control border-input" placeholder="Email Address" class="address" name="email" value="<%= @user.email %>">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label >Current Password</label>
                                                <input id="current-password" type="password" class="form-control border-input"  placeholder="Current password" name="current_password" >
                                            </div>
                                        </div>
                                    </div>

                                     <hr>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Password</label>
                                                <input type="password" class="form-control border-input" placeholder="Password" name="password">
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Confirm Password</label>
                                                <input type="password" id="confirm-password" class="form-control border-input" placeholder="Confirm Password" name="confirm_password"  >
                                            </div>
                                        </div>
                                    </div>

                                   <!-- add csrf token -->
                                    <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %> 

                                    <div class="text-center">
                                        <button id="update"  class="btn btn-info btn-fill btn-wd">  Update </button>
                                    </div>                               
                                  </form>
                                
                                    
                               
                            </div>
                        </div>                       
                    </div>           
              </div>
            </div>
        </div>

    </div>
</div>

<script>

<% flash.each do |key, value| %>
    showMessage('top','center', "<%= value %>", <%= (key == "success") ? 2: 4 %>);                   
<% end %>

$("#update").click(function(event){
  var confirmed = true;
  var currentPassword = $("#current-password").val();
   if (!currentPassword){
     showMessage('top','center', "Current Password cannot be empty", 4); 
     event.preventDefault();
  } else {
    $.ajax({
          url: '<%= check_password_path %>', 
          type: 'GET',
          data: {current_password: currentPassword },
          success: function(data){
              $("#form").submit();
          },
          error : function(jqXHR, textStatus, errorThrown) {
               
           }
       });
  }
 
});







</script>


