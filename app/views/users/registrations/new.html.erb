      <div class="header-filter" style="background-image: url('assets/dq4.png'); background-size: cover; background-position: top center; min-height: 683px;">    
          <div class="container">
              <div class="logo-container">
                <div class="text-center">
                  <%= image_tag('dqlogo.png')%>
                </div>                    
              </div>
                  <div>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-4 col-md-offset-4">         
                                <div class="card card-signup">    
                                    <div class="form">
                                      <div class="text-center" style="color:#5e337b">
                                        <h3>Sign up</h3>
                                      </div>
                                      <div class="content">
                                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                                        
                                        
                                       <% if !resource.errors.empty? %>
                                          <div class="flasher row"><div class="alert fade in alert-danger "><button type="button" class="close" data-dismiss="alert">Ã—</button><%= devise_error_messages! %></div></div>
                                       <% end %>

                                          <div class="input-group">
                                            <span class="input-group-addon">
                                               <i class="material-icons">face</i>
                                            </span>                     
                                            <%= f.text_field :name, :placeholder => 'Full Name', class: "form-control", html: {spellcheck: "false"} %>         
                                          </div>

                                          <div class="input-group">
                                            <span class="input-group-addon">
                                               <i class="material-icons">email</i>
                                            </span>                     
                                            <%= f.email_field :email, :placeholder => 'Email', class: "form-control", html: {spellcheck: "false"} %>
                                          </div>

                                          <div class="input-group">
                                            <span class="input-group-addon">
                                               <i class="material-icons">phone</i>
                                            </span>
                                            <%= f.text_field :telephone, :placeholder => 'Phone Number', class: "form-control", html: {spellcheck: "false"} %>
                                          </div>

                                          <div class="input-group">
                                            <span class="input-group-addon">
                                                 <i class="material-icons">lock_outline</i>
                                            </span>

                                            <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password', class: "form-control", html: {spellcheck: "false"} %>
                                            <% if @minimum_password_length %>
                                            <em>(<%= @minimum_password_length %> characters minimum)</em>
                                            <% end %><br />
                                          </div>

                                         

                                          <div class="text-center">
                                            <%= f.submit "Sign up", class: "btn btn-primary btn-raised"%>
                                          </div>
                                        <% end %>
                                        <div class="text-center"><span>Already have account?</span>
                                         <%= render "users/shared/links" %>
                                        </div>
                                      </div>
                                    </div>
                                </div>  
                            </div>  
                        </div>
                    </div>
                  </div>
          </div>
      </div>    
      
    
