
<% if !flash[:notice].blank? %>
<div class="alert alert-info">
<%= flash[:notice] %>
</div>
<% end %>
<br/>
<%= link_to "New Contact", new_company_contact_path, class: "btn btn-primary" %>
<br/>
<br/>
<table  class="table table-bordered table-striped">
<thead>
<tr>
<th>Name</th>
<th>Link</th>
<th></th>
</tr>
</thead>
<tbody>
<% @contacts.each do |contact|%>
<tr>
<td> <%=contact.name%></td>
<td> <%= link_to "View Contact", contact.attachment_url %>   </td>
<td> <%= button_to  "Delete", company_contact_path(id: contact.id), method: :delete, class:"btn btn-danger", data: { confirm: "Are you sure you want to delete  #{contact.name}?" } %>    </td>
</tr>
<% end %>
</tbody>
</table>















