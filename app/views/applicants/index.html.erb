<div class="homepage-body" style=" background: linear-gradient(rgba(51, 51, 51, 0.37), rgba(51, 51, 51, 0.51)), url(<%= (@company.image.file.nil?) ? asset_path('interviewers.jpg') : @company.image.url %>);" >

  
  
<div class="dq-wrapper">
      <div class="dq-container-editable"  >
        <nav class="navbar navbar-default dq-navbar-transparent" role="navigation">
          <!-- Brand and toggle get grouped for better mobile display -->
           <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
               <span class="sr-only">Toggle navigation</span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">
               <%  if @company.logo.file.nil? %>
                 <%= image_tag('dqbeta.png', height:"40") %>
               <% else %>
                  <img src="<%= @company.logo %>" alt="" height="40"/>
               <% end %>

              </a>
           </div>

          <% if @editable == "true" %>
              <!-- Collect the nav links, forms, and other content for toggling -->
               <div class="collapse navbar-collapse navbar-ex1-collapse">
                  <ul class="nav navbar-nav navbar-right">
                    <li>

                      <input  onchange="update()" type="hidden" id="color_value" value="<%= (@company.properties.nil?) ? "#5e337b": @company.properties["primaryColor"] %>">     

                       <button  id="color-button"  contenteditable="false" class="btn  jscolor {valueElement: 'color_value'}" > Pick a colour </button> 
              
                   </li>
                     <li>
                        <form method="post" >
                          <input id="properties-values" type = "hidden" name="properties" >
                          <input  name="user_id" type="hidden" value="<%= @user.id %>" />
                          <input  name="company_id" type="hidden" value="<%= @company.id %>" />
                          <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
                           <button type="submit" id="save-button" contenteditable="false" class="btn dq-color-customized" > Save </button> 
                        </form>
                   </li>
                   <li>
                        <form method="post" >
                          <input id="reset-values" type = "hidden" name="properties" >
                          <input  name="user_id" type="hidden" value="<%= @user.id %>" />
                          <input  name="company_id" type="hidden" value="<%= @company.id %>" />
                          <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
                           <button type="submit" id="reset-button" contenteditable="false" class="btn dq-color-customized" > Reset </button> 
                        </form>
                   </li>

                  </ul>
              </div>
          <% end %>
          <!-- /.navbar-collapse -->
        </nav>

        <div class="dq-main-container">
          <div class="container">
            <div class="row">
              <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="container">
                  <h1 class="dq-hero-heading editableContent max-char" max="50">Hero text here</h1>
                  <h4 class="dq-hero-subheading editableContent max-char" max="180">Sub hero text here</h4>
                </div>
              </div>
            </div>
          </div>
          <div class="dq-bottom-overlay">
            <div class="container">
              <h5 class="dq-pre-cta editableContent max-char" max="60" >Pre cta text here</h5>

          
          <form  id="form-details" method="post" action="/applicants"> 
            
            <input type="text" class="dq-input-interview-token" id="interview-token-box" placeholder="Enter your interview code here" value="<%= params[:interview_token] %>" name="interview_token" contenteditable="false" />
            
            <input type="hidden" value="register" name ="page" />

              <!-- add csrf token -->
              <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>   

         <div class="editableContent">
              <button id = "take-interview" class="btn btn-large dq-btn-start-interview dq-color-customized"> Start your interview </button>
         </div>
        
            
          </form>


              <h6 class="dq-company-contact editableContent max-char" max="100">Have questions? Contact us on info@dropque.com</h6>
            </div>
          </div>
        </div>
      </div>

      <div class="dq-container-noneditable">
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <p class="dq-branding">Powered by <a class="dq-branding" href="#">Dropque.com</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>

</div>




<script>

  $("#take-interview").click(function(event){
    event.preventDefault();

    var interviewToken = $("#interview-token-box").val();
    $.ajax({
          url: '/validate_interview', 
          type: 'GET',
          data: {interview_token: interviewToken },
          success: function(data){
              if (data == "success"){
                  $("#form-details").submit();
               }  else {
                  $("#interview-token-box").val("Invalid interview token");
               }
          },
          error : function(jqXHR, textStatus, errorThrown) {
               
           }
       });
    });

</script>

<% if @editable == "true" %>
  <script>
     $("#save-button").click(function(event){

        var properties = {

            primaryColor: "#" + $("#color_value").val(),
            heroText: $('.dq-hero-heading').text(),
            subHeroText: $('.dq-hero-subheading').text(),
            preCtaText: $('.dq-pre-cta').text(),
            ctaButton: $('.dq-btn-start-interview').text(),
            contactInfo: $('.dq-company-contact').text()
        };
        $("#properties-values").val(JSON.stringify(properties));
     });

     $("#reset-button").click(function(event){

        var properties = {

            primaryColor: '#5e337b',
            heroText: "Hero text here",
            subHeroText: "Sub hero text here",
            preCtaText: "short de cta text here",
            ctaButton: "Start your interview",
            contactInfo: "Contact us text here info@dropque.com"
        };
        $("#reset-values").val(JSON.stringify(properties));
     });

  
  </script>
  <script type="text/javascript" src="http://jscolor.com/release/2.0/jscolor-2.0.4/jscolor.js"></script>

  <script>
    function update() {
      setColor("#"+$("#color_value").val());
    }

   
    $(".max-char").on('keyup', function(event) {

         var max = $(this).attr("max");
         var length = $(this).text().length ;
         if ( length > max ){
            $(this).text($(this).text().substr(0, max));
         }
    
    });
  </script>
<% end %>

