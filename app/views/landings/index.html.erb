<!-- modal hidden over here -->

<div class="modal fade login" id="loginModal">
  <div class="modal-dialog login animated">
      <div class="modal-content">
         <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Request A Demo</h4>
        </div>
        <div class="modal-body">  
            <div class="box">
                 <div class="content">
                    <div class="division">
                        <div class="line l"></div>
                          <span> Enter Details </span> <span id="loading"></span>
                        <div class="line r"></div>
                    </div>
                    <div class="error"></div>
                 </div>
            </div>
            <div class="box">
                <div class="content registerBox">
                 <div class="form">
                    <form  data-remote="true" id="request-demo">
                    <div class="row">
                        <div class="col-md-6">
                        <input id="organization" class="form-control" type="text" placeholder="Organization Name" name="organization">
                        </div>
                        <div class="col-md-6">
                            <input  id="name" class="form-control" type="text" placeholder="Your Name" name="name">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                        <input id="email" class="form-control" type="text" placeholder="Business/Official Email" name="email">
                        </div>
                        <div class="col-md-6">
                            <input  id="telephone" class="form-control" type="text" placeholder="Phone Number" name="telephone">
                        </div>
                    </div>


                     <input  id="role" class="form-control" type="text" placeholder="Job Title/Role Name" name="role">
                     <select  class="form-control"  name="purpose">
                        <option value="Recruiting" > Recruiting </option>
                        <option value="Talent Acquisition" > Talent Acquisition </option>
                        <option value="Receiving Feedback" > Receiving Feedback </option>
                        <option value="Others" > Others </option>
                     </select>
                     </select>
                    <input id="submit" class="btn btn-default btn-register" type="submit" value="Submit Request" name="commit" onclick="submitAjax()">
                    </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="forgot login-footer">
                <span>Looking to 
                     <%= link_to new_user_registration_path do %>
                        create an account ?
                    <% end %>
                </span>
            </div>
        </div>        
      </div>
  </div>
</div>


